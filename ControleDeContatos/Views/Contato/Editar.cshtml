@{
    ViewData["Title"] = "Editar Contato";
}

<h1 class="text-center display-4">Editar Contato</h1>

<form>
    <div class="form-group pd-10">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" id="nome" placeholder="Maria da Silva">
    </div>

    <div class="form-group pd-10">
        <label for="email">E-mail</label>
        <input type="email" class="form-control" id="email" placeholder="mariadasilva@email.com">
    </div>

    <div class="form-group pd-10">
        <label for="telefone">Telefone</label>
        <input type="text" class="form-control" id="telefone" placeholder="(XX) XXXXX-XXXX">
    </div>

    <div class="pd-10">
        <button type="submit" class="btn btn-primary">Alterar</button>
        <a class="btn btn-secondary" role="button" asp-controller="Contato" asp-action="Index">Voltar</a>
    </div>
</form>